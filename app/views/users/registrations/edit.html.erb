<div class="row">
<div class="col">
<h2><%= t('edit_profile')%></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>
<br />
  <div class="form-group row">
    <label for="inputEmail3" class="col-sm-3 col-form-label"><%=t('email')%></label>
    <div class="col-sm-9">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", :class=>"form-control", :id=>"inputEmail3" %>
    </div>
<br />
  <div class="custom-file">
    <%= f.file_field :avatar, :class=>"custom-file-input", :id=>"customFile" %>
    <label class="custom-file-label" for="customFile"><%= t('chose_avatar') %></label>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div><%=t('wait_confirm')%>: <%= resource.unconfirmed_email %></div>
  <% end %>

  </div>
  <div class="form-group row">
    <label for="inputPassword3" class="col-sm-3 col-form-label"><%= t('new_password')%></label>
    <div class="col-sm-9">
        <%= f.password_field :password, autocomplete: "off", :class=>"form-control", :id=>"inputPassword3", :placeholder=>t('leave_empty') %>
        <% if @minimum_password_length %>
      <small class="form-text text-muted"><%= @minimum_password_length.to_s+" "+t('characters_minimum') %></small>
    <% end %>
    </div>
  </div>

  <div class="form-group row">
    <label for="inputConfirmPassword3" class="col-sm-3 col-form-label"><%= t('password_confirmation')%></label>
    <div class="col-sm-9">
        <%= f.password_field :password_confirmation, autocomplete: "off" , :class=>"form-control", :id=>"inputConfirmPassword3"%>
    </div>
  </div>

    <div class="form-group row">
    <label for="inputOldPassword3" class="col-sm-3 col-form-label"><%= t('password')%></label>
    <div class="col-sm-9">
        <%= f.password_field :current_password, autocomplete: "off", :class=>"form-control", :id=>"inputOldPassword3", :placeholder=>t('we_need_pass') %>
    </div>
  </div>

   <div class="form-group row">
    <div class="col-sm-9">
      <%= f.submit t('update') , :class=>"btn btn-primary" %>
    </div>
  </div>

<% end %>

<h3><%= t('delete_account') %></h3>

<p><%=t('unhappy')%> <%= button_to t('delete_my_account'), registration_path(resource_name), data: { confirm: t('are_you_shure') }, method: :delete, :class=>"btn btn-danger" %></p>

<%= link_to t('back'), :back %>
</div>
<div class="col">
  </div>
</div>