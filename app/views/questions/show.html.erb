<h3><%= @question.name %></h3>
<hr>
<p> 
<%= raw @question.categories.map(&:name).map{ |t| link_to t, category_path(t)}.join(' ') %></p>
<p><%= @question.text%></p>

<%=render @qcomments%>
<br>
<div>
<%=form_for :answer, url:question_answers_path(@question.id) do |f|%>
<%=render '/answers/form', f:f %>
<%end%>
<%=form_for :qcomment,  url:question_qcomments_path(@question.id) do |g| %>
<%=render "/qcomments/form", g:g %>
<%end%>

</div>
<hr>

<%=render @answers%>
