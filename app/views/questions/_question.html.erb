<style type="text/css">
	.badge a{
		color: white;
	}
}
</style>


<div class="row clearfix">
	<div class="col-1">
		<%=link_to qpositiv_vote_path(question.id) do%>
		<%= image_tag "up-arrow.svg", :heigth=>"18", :width=>"18", :class=>"mx-auto d-block" %>
		<%end%>
		<h3 class="text-center text-dark" style="margin: 0; margin-left: 2px;"><%=question.score%></h3>
		<%=link_to qnegativ_vote_path(question.id) do%>
		<%= image_tag "down-arrow.svg", :heigth=>"18", :width=>"18", :class=>"mx-auto d-block"  %>
		<%end%>

	</div>

	<div class="col">
	<h5>
		<%=link_to question.name, question_path(question.id) %>
		<span class="badge badge-primary" data-toggle="tooltip" title="Кількість відповідей"><%= question.count %></span>&emsp;—&emsp;<%=image_tag question.user.userparam.avatar.url, height:22%> <small><b class="text-secondary"><%= link_to question.user.nickname, userparam_path(question.user.userparam)%>
		</b></small>
	</h5>
	<p>
		<%=strip_tags(question.text)[0..255]%>...
		<br>
		<div><p> 
			<%= raw Tag.where(resource_id: question.id, resource_type: "question").map{|tag| tag = Category.find(tag.category_id)}.map(&:name).map{ |t| link_to t, category_path(t), class: 'font-weight-bold badge badge-secondary' }.join(' ') %>
			</p>
			
		</div>
	</p>
</div>
</div>
<hr/>