<h3>Профіль користувача <b><%=@userparam.user.nickname%></b></h3>
<%=form_for @userparam, url:userparam_path, method: :patch do |f|%>

  <div class="custom-file">
    <%= f.file_field :avatar, :class=>"custom-file-input", :id=>"customFile" %>
    <label class="custom-file-label" for="customFile"><%= t('chose_avatar') %></label>
  </div>

  <div class="form-group ">
  	<%=f.label "Про себе" %>
    <%= f.text_area :bio, class:"form-control"%>
	</div>

	 <div class="form-group ">
  	<%=f.label :country %>
  	<%= f.country_select  :country, class:"form-control"%>
	</div>

  <div class="form-group ">
    <%=f.label "ВНЗ" %>
    <%= f.text_field :univ, class:"form-control"%>
  </div>

  <div class="form-group ">
    <%=f.label :phone %>
    <%= f.text_field :phone, class:"form-control"%>
  </div>


  <%=f.submit "Оновити"%>

<%end%>
