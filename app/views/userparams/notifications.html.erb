<style type="text/css">

</style>

<div class="row">
<div class="col">	
<div class="row">
	<div class="col">
	<ul class="nav">
	  <span class="navbar-text font-weight-bold">
	  	<%= t('notifications') %>
	  </span>
	</ul>
	</div>
<!--  separator  -->	
	<div class="col">
	<ul class="nav justify-content-end">
  <li class="nav-item">
    <%=link_to t('notif_delet'), notif_delet_url, class:"btn btn-primary" %>
  </li>
</ul>

</div>
</div>
<hr>
<%@notifications.each do|notif|%>
	
	<%if notif.view %>
		<div class="bg-light">
		<%if notif.resource_type=="question"%>
		
			<%= notif.text%> <%=link_to Question.find(notif.resource_id).name , question_path(notif.resource_id)%>
		<%end%>
		<%if notif.resource_type=="base"%>
			<%=notif.text%>
		<%end%>
		<span class="pull-right"><%=notif.created_at.strftime("%Y/%m/%d %H:%M")%></span>

		</div>
	<%else%>

	<div class="bg-info">
	<%if notif.resource_type=="question"%>
		
			<%= notif.text%><%=link_to Question.find(notif.resource_id).name , question_path(notif.resource_id)%>
		<%end%>
		<%if notif.resource_type=="base"%>
			<%=notif.text%>
			
		<%end%>
		<span class="pull-right"><%=notif.created_at.strftime("%Y/%m/%d %H:%M")%></span>
		<%notif.update(view: true)%>
	</div>
	<%end%>
	<hr class="hr-1" />
<%end%>

</div>
<div class="col-12 col-md-3">
	 <%= render "layouts/sidebar"%>
</div>
</div>