<h3>Сповіщення:</h3>
<%@notifications.each do|notif|%>
	<hr>
	<%if notif.view %><span class="fa fa-eye-slash"></span><%else%><span class="fa fa-eye"></span><%end%>
	<%if notif.resource_type=="question"%>
		<p><%=link_to Question.find(notif.resource_id).name , question_path(notif.resource_id)%><br>
		<%= notif.text%></p>
		<p><%=notif.created_at.strftime("%Y/%m/%d %H:%M")%></p>
	<%end%>
	<%if notif.resource_type=="base"%>
		<p><%=notif.text%></p>
		<p><%=notif.created_at.strftime("%Y/%m/%d %H:%M")%></p>
	<%end%>
	<%notif.update(view: true)%>
<%end%>